{
  "name": "mini-touch-dashboard",
  "version": "0.1.0",
  "private": true,
  "description": "A small always-on-top Electron dashboard for a secondary touchscreen showing weather, system stats, and feeds.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "build": "electron-builder",
    "build:win": "electron-builder --win nsis",
    "build:win:portable": "electron-builder --win portable",
    "build:mac": "electron-builder --mac dmg",
    "build:linux": "electron-builder --linux AppImage"
  },
  "dependencies": {
    "systeminformation": "^5.23.7",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.3"
  },
  "build": {
    "appId": "com.example.miniTouchDashboard",
    "productName": "Mini Touch Dashboard",
    "asar": true,
    "files": [
      "**/*",
      "!node_modules/.cache/**",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "extras",
        "to": "extras",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "include": "build/installer.nsh"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
